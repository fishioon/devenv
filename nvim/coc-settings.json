{
	"yank.highlight.enable": false,
	"list.maxHeight": 18,
	"list.autoResize": false,
	"list.normalMappings": {
		"t": "action:tabe",
		"v": "action:vsplit",
		"s": "action:split",
		"d": "action:delete"
	},
	"list.insertMappings": {
		"<C-t>": "action:tabe",
		"<C-v>": "action:vsplit",
		"<C-w>": "command:wincmd k"
	},
	"languageserver": {
		"golang": {
			"command": "gopls",
			"rootPatterns": [
				"go.mod"
			],
			"filetypes": [
				"go"
			]
		},
		"clangd": {
			"command": "clangd",
			"args": [
				"--background-index"
			],
			"rootPatterns": [
				"compile_flags.txt",
				"compile_commands.json",
				".vim/",
				".git/",
				".hg/"
			],
			"filetypes": [
				"c",
				"cpp",
				"objc",
				"objcpp"
			]
		}
	}
}
